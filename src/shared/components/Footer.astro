---
import logoBg from '@/assets/img/logo-dark.webp'
import LinkedIn from '@/shared/components/icons/LinkedIn.astro'
import { Image } from 'astro:assets'
import Facebook from './icons/Facebook.astro'
import Instagram from './icons/Instagram.astro'
import TikTok from './icons/TikTok.astro'
import Youtube from './icons/Youtube.astro'
---

<footer>
  <div class='wrapper'>
    <div class='footer-content'>
      <div class='footer-cta'>
        <h3 class='footer-cta-alt'>¿Aún no te has registrado?</h3>
        <a
          class='footer-cta-link'
          href='https://accounts.gadmin.app/?from=footer'
          rel='noopener noreferrer'
          target='_blank'>¡Haz tu sueño realidad hoy!</a
        >
        <div class='footer-socials'>
          <a
            title='TikTok de Gadmin'
            href='https://www.tiktok.com/@gadmin.app'
            rel='noopener noreferrer'
            target='_blank'
            aria-label='TikTok'
          >
            <TikTok size={24} color='#FFFFFF' />
          </a>
          <a
            title='Youtube de Gadmin'
            href='https://www.youtube.com/@gadminapp'
            rel='noopener noreferrer'
            target='_blank'
            aria-label='Youtube'
          >
            <Youtube size={24} color='#FFFFFF' />
          </a>
          <a
            title='LinkedIn de Gadmin'
            href='https://www.linkedin.com/company/gadmin-app/'
            rel='noopener noreferrer'
            target='_blank'
            aria-label='LinkedIn'
          >
            <LinkedIn size={24} color='#FFFFFF' />
          </a>
          <a
            title='Instagram de Gadmin'
            href='https://www.instagram.com/gadmin.app/'
            rel='noopener noreferrer'
            target='_blank'
            aria-label='Instagram'
          >
            <Instagram size={24} color='#FFFFFF' />
          </a>
          <a
            title='Facebook de Gadmin'
            href='https://www.facebook.com/gadminapp/'
            rel='noopener noreferrer'
            target='_blank'
            aria-label='Facebook'
          >
            <Facebook size={24} color='#FFFFFF' />
          </a>
        </div>
      </div>
      <div class='footer-links'>
        <div class='footer-link-section'>
          <p class='footer-link-section-title'>Legal</p>
          <div class='footer-link-section-links'>
            <a
              class='footer-link-section-link'
              href='https://gadmin.app/terms-and-conditions'
              rel='noopener noreferrer'
              target='_blank'>Términos y Condiciones</a
            >
            <a
              class='footer-link-section-link'
              href='https://gadmin.app/privacy-policy'
              rel='noopener noreferrer'
              target='_blank'>Política de Privacidad</a
            >
          </div>
        </div>
      </div>
    </div>
    <div class='footer-copy'>
      <Image src={logoBg} width={40} height={40} alt='Logo de Gadmin' />
      <div class='footer-copy-text'><strong>Gadmin</strong> © 2025</div>
    </div>
  </div>
</footer>

<style>
  footer {
    padding: 2rem 1rem;
    background-color: var(--shade-03);
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr auto;
    align-items: center;
  }

  .footer-cta-alt {
    margin: 0;
    font-size: 1.35rem;
    color: var(--white);
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .footer-cta-link {
    display: block;
    width: fit-content;
    font-size: 1.5rem;
    font-weight: 700;
    background: linear-gradient(to right, var(--primary), var(--accent));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-decoration: none;
    margin-bottom: 0.75rem;
  }

  .footer-socials {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    gap: 1rem;
  }

  .footer-links {
    display: flex;
    gap: 3rem;
  }

  .footer-link-section-title {
    margin: 0;
    margin-bottom: 0.75rem;
    color: var(--white);
    font-weight: bold;
    font-size: 1.2rem;
  }

  .footer-link-section-links {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-link-section-link {
    color: #d1d1d1;
    text-decoration: none;
  }

  .footer-link-section-link:hover {
    color: var(--white);
    text-decoration: underline;
  }

  .footer-copy {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .footer-copy-text {
    color: var(--white);
    font-size: 1.15rem;
  }

  @media screen and (max-width: 768px) {
    .footer {
      padding: 1rem;
    }

    .footer-content {
      grid-template-columns: 1fr;
      align-items: center;
      gap: 1.5rem;
    }

    .footer-cta {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    .footer-socials {
      margin-top: 0.5rem;
    }

    .footer-links {
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 1.5rem;
      text-align: center;
      margin-bottom: 1rem;
    }
  }
</style>
