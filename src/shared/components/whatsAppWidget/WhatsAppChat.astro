---
import WhatsAppIcon from '../icons/WhatsApp.astro'

interface Props {
  chatName: string
  description: string
  icon: string
  iconAlt: string
  isActive: boolean
  chatLink: string
}

const { chatName, description, icon, iconAlt, isActive, chatLink } = Astro.props
const chatActiveClass = isActive ? 'chat--active' : 'chat--inactive'

let link = isActive ? chatLink : '#!'
let target = isActive ? '_blank' : '_self'
---

<a class:list=`chat ${chatActiveClass}` target={target} href={link}>
  <div class='chat__content'>
    <img class='chat__icon' src={icon} width={45} height={45} alt={iconAlt} />

    <div class='chat__name--container'>
      <span class='chat__name'>{chatName}</span>
      <span class='chat__description'>{description}</span>
      <span class='chat__comeback'>Volver√© pronto</span>
    </div>
    <div class='chat__whatsAppIcon'>
      <WhatsAppIcon size={27} color='#2db742' />
    </div>
  </div>
</a>

<style>
  .chat {
    width: 100%;
    height: 70px;
    background-color: #989b9f23;
    border-bottom-left-radius: 4px;
    transition: all 0.3s ease;
    text-decoration: none;
    color: black;
  }

  .chat--active {
    border-left: 2px solid #2db742;
    cursor: pointer;
  }

  .chat--inactive {
    border-left: 2px solid #c2c2c2;
    cursor: default;
  }

  .chat--active.chat:hover {
    background-color: white;
    box-shadow: 0 5px 10px 4px rgba(0, 0, 0, 0.05);
  }

  .chat__content {
    height: 100%;
    width: 100%;
    display: flex;
    align-items: center;
    padding: 1rem;
    gap: 1rem;
  }

  .chat__icon {
    border-radius: 50%;
  }

  .chat__name--container {
    display: flex;
    gap: 0.2rem;
    flex-direction: column;
  }

  .chat__name {
    font-size: 0.85rem;
    font-weight: 500;
  }

  .chat__description {
    font-size: 0.75rem;
    font-weight: 300;
    opacity: 0.4;
  }

  .chat__comeback {
    font-size: 0.65rem;
    font-weight: 400;
    color: #f5a623;
    display: none;
  }

  .chat--inactive .chat__comeback {
    display: block;
  }

  .chat__whatsAppIcon {
    margin-left: auto;
  }
</style>
