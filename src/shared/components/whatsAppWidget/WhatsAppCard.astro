import WhatsAppIcon from '../icons/WhatsApp.astro'
---

<div class='whatsApp__card'>
  <header class='whatsApp__card-header'>
    <div class='whatsApp__card-header-icon'>
      <WhatsAppIcon size={42} color='#ffffff' />
    </div>

    <div class='whatsApp__card-header-content'>
