<style>
  .testimonials {
    background: var(--shade-03);
    color: var(--white);
    padding: 4rem 1rem 2rem 1rem;
  }

  .testimonials-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 3rem 1rem;
    border-radius: 16px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .testimonials-title {
    margin: 0 0 2rem 0;
    color: var(--white);
    text-align: center;
    font-size: var(--48-pt);
    letter-spacing: -1px;
    font-weight: 800;
  }

  .testimonials-title span,
  .testimonial-gadmin {
    background: linear-gradient(to right, var(--primary), var(--secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .testimonial-gadmin {
    font-size: var(--32-pt);
    text-transform: uppercase;
  }

  .testimonials-list {
    display: flex;
    gap: 2.5rem;
    padding: 2rem 0;
    justify-content: center;
    flex-wrap: wrap;
    width: 100%;
  }

  .testimonial {
    flex: 1 1 320px;
    max-width: 370px;
    min-width: 260px;
    display: flex;
    justify-content: center;
  }

  .testimonial-card {
    background: rgba(255, 255, 255, 0.04);
    border-radius: 18px;
    box-shadow: 0 4px 24px 0 rgba(31, 38, 135, 0.1);
    padding: 2rem 1.5rem 1.5rem 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    transition:
      transform 0.18s cubic-bezier(0.4, 0, 0.2, 1),
      box-shadow 0.18s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1.5px solid rgba(255, 255, 255, 0.08);
    position: relative;
  }
  .testimonial-card:hover {
    transform: translateY(-8px) scale(1.03);
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.18);
    border-color: var(--primary);
  }

  .testimonial-business-logo {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.2rem;
    width: 100%;
    justify-content: center;
  }

  .testimonial-avatar {
    border-radius: 100%;
    box-shadow: 0 2px 8px 0 rgba(31, 38, 135, 0.1);
    width: 64px;
    height: 64px;
    object-fit: cover;
    background: var(--white);
  }

  .testimonial-author {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    flex-direction: column;
  }

  .testimonial-author-name {
    margin: 0;
    font-weight: 700;
    font-size: 1.1rem;
    color: var(--white);
    letter-spacing: 0.01em;
  }

  .testimonial-author-role {
    margin: 0;
    color: var(--secondary);
    font-size: 0.98rem;
    font-weight: 500;
    opacity: 0.85;
  }

  .testimonial-message {
    color: var(--neutral-04);
    font-size: 1.18rem;
    font-weight: 400;
    text-align: center;
    margin-top: 0.5rem;
    line-height: 1.5;
    position: relative;
    min-height: 120px;
  }

  .testimonial-quote {
    color: var(--primary);
    font-size: 2.2rem;
    font-weight: 900;
    vertical-align: middle;
    line-height: 0.5;
    margin: 0 0.1em;
    opacity: 0.7;
    font-family: serif;
  }

  @media screen and (max-width: 1024px) {
    .testimonials-list {
      gap: 1.5rem;
    }
    .testimonial {
      max-width: 100%;
    }
  }

  @media screen and (max-width: 768px) {
    .testimonials-title {
      text-align: left;
      font-size: 2rem;
    }

    .testimonials-list {
      flex-direction: column;
      gap: 2rem;
      padding: 1.5rem 0;
    }

    .testimonial {
      max-width: 100%;
      min-width: 0;
    }
    .testimonial-card {
      padding: 1.5rem 1rem 1rem 1rem;
    }
  }
</style>
