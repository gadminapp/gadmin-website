<style>
  .presentation {
    background-color: var(--neutral-02);
    padding: 4rem 1rem;
  }

  .presentation-title {
    margin: 0;
    margin-bottom: 1rem;
    color: var(--shade-03);
    text-align: center;
    font-size: var(--64-pt);
    font-weight: 800;
    line-height: 1.1;
  }

  .presentation-subtitle {
    margin: 0 auto 3rem auto;
    color: var(--shade-04);
    text-align: center;
    font-size: 1.2rem;
    max-width: 700px;
    line-height: 1.4;
    font-weight: 400;
  }

  .presentation-title span {
    background: linear-gradient(to right, var(--primary), var(--shade-03));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .presentation-images {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    place-items: center;
    padding: 5rem 1rem;
    padding-bottom: 0rem;
    margin-top: 2rem;
  }

  .presentation-image {
    width: 90%;
    height: auto;
    border-radius: 0.5rem;
    background-color: transparent;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15);
  }

  .presentation-image-left,
  .presentation-image-right {
    position: absolute;
    top: -1.5rem;
    left: 0rem;
    width: 28%;
    box-shadow: 4px 8px 8px hsla(235, 72%, 10%, 0.35);
    opacity: 0;
    transition:
      opacity 0.3s ease,
      left 0.3s ease,
      right 0.3s ease;
  }

  .presentation-images:has(.presentation-image-center:hover) .presentation-image-left,
  .presentation-images:has(.presentation-image-center:hover) .presentation-image-right,
  .presentation-image-left:hover,
  .presentation-image-right:hover {
    opacity: 1;
  }

  .presentation-images:has(.presentation-image-center:hover) .presentation-image-left,
  .presentation-image-left:hover {
    left: 1rem;
  }

  .presentation-images:has(.presentation-image-center:hover) .presentation-image-right,
  .presentation-image-right:hover {
    right: 1rem;
  }

  .presentation-image-right {
    left: inherit;
    right: 0rem;
    box-shadow: -4px 8px 8px hsla(235, 72%, 10%, 0.35);
  }

  .presentation-features {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    font-size: 1.125rem;
  }

  .presentation-feature {
    border-radius: 1rem;
    padding: 2rem 1.5rem;
    text-align: center;
    color: var(--shade-04);
    line-height: 1.6;
    transition: transform 0.3s linear;
    transition-delay: 0s;
  }

  .presentation-feature:hover {
    transform: translateY(-16px);
  }

  .feature-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    display: block;
  }

  .presentation-feature strong {
    color: var(--shade-03);
    display: block;
    margin-bottom: 0.5rem;
    font-size: 1.2rem;
    background: linear-gradient(to right, var(--primary), var(--shade-03));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  @media screen and (max-width: 768px) {
    .presentation-title {
      font-size: var(--48-pt);
    }

    .presentation-subtitle {
      font-size: var(--20-pt);
      margin-bottom: 2rem;
    }

    .presentation-images {
      grid-template-columns: 1fr;
      padding: 2rem 0;
    }

    .presentation-image-center {
      width: 100%;
    }

    .presentation-image-left,
    .presentation-image-right {
      display: none;
    }

    .presentation-features {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      text-align: center;
      margin-top: 1rem;
    }

    .presentation-feature {
      padding: 1.5rem 1rem;
    }

    .feature-icon {
      font-size: 2rem;
      margin-bottom: 0.8rem;
    }
  }

  @media screen and (min-width: 768.1px) {
    .presentation-image-left,
    .presentation-image-right {
      transform: translateY(0rem);
      animation: move cubic-bezier(0.4, 0, 0.2, 1) forwards;
      animation-timeline: scroll(nearest block);
      will-change: transform;
      backface-visibility: hidden;
    }

    @keyframes move {
      0% {
        transform: translateY(0rem);
      }
      100% {
        transform: translateY(5rem);
      }
    }
  }
</style>
