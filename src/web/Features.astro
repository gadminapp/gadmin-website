    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    flex: 1;
  }

  .feature-title {
    margin: 0;
    margin-bottom: 1.5rem;
    color: var(--shade-03);
    font-size: var(--40-pt);
    font-weight: 700;
    line-height: 1.2;
    background: linear-gradient(to right, var(--primary), var(--shade-03));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .feature-description {
    margin: 0;
    margin-bottom: 1.5rem;
    color: var(--shade-04);
    font-size: 1.1rem;
    line-height: 1.6;
    font-weight: 400;
  }

  .feature-benefits {
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
  }

  .benefit {
    color: var(--shade-04);
    font-size: 1.1rem;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .feature-image {
    height: fit-content;
    min-height: 250px;
    margin: auto;
    flex: 0 0 350px;
  }

  .feature-image img {
    height: 100%;
    width: auto;
    margin: 0 auto;
    border-radius: 1rem;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  }

  @media screen and (max-width: 1024px) {
    .feature {
      gap: 2rem;
    }

    .feature-image {
      flex: 0 0 300px;
      min-height: 200px;
    }
  }

  @media screen and (max-width: 768px) {
    .features {
      padding: 3rem 1rem;
    }

    .features-list {
      gap: 3rem;
    }

    .feature {
      flex-direction: column;
      flex-flow: column-reverse;
      gap: 2rem;
      text-align: center;
    }

    .feature--reverse {
      flex-flow: column;
    }

    .feature-content {
      align-items: center;
    }

    .feature-title {
      text-align: center;
    }

    .feature-description {
      font-size: var(--18-pt);
      text-align: center;
    }

    .feature-image {
      width: 100%;
      max-width: 280px;
      margin: 0 auto;
      flex: none;
    }

    .feature-image img {
      width: 100%;
      height: auto;
    }

    .feature-benefits {
      align-items: center;
      text-align: center;
    }

    .benefit {
      font-size: var(--18-pt);
      justify-content: center;
    }
  }
</style>
